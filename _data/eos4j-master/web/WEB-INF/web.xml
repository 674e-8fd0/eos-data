<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--配置这个路径访问哪一个路径-->
    <servlet>
        <servlet-name>Creat_account_Servlet</servlet-name>
        <servlet-class>servlet.Creat_account_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Get_current_balance</servlet-name>
        <servlet-class>servlet.Get_current_balance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>get_action</servlet-name>
        <servlet-class>servlet.get_actions_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Transfer</servlet-name>
        <servlet-class>servlet.Transfer_Servelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>get_Transaction</servlet-name>
        <servlet-class>servlet.Transaction_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>get_balance_order</servlet-name>
        <servlet-class>servlet.get_balance_order</servlet-class>
    </servlet>
    <!--配置浏览器访问servlet的路径-->
    <servlet-mapping>
        <servlet-name>Creat_account_Servlet</servlet-name>
        <url-pattern>/Creat_account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Get_current_balance</servlet-name>
        <url-pattern>/balance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Transfer</servlet-name>
        <url-pattern>/transfer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get_action</servlet-name>
        <url-pattern>/get_action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get_Transaction</servlet-name>
        <url-pattern>/get_Transaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>get_balance_order</servlet-name>
        <url-pattern>/get_balance_order</url-pattern>
    </servlet-mapping>

</web-app>